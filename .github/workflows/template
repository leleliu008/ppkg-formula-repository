name: workflowINDEX

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:
  build:
    strategy:
      fail-fast: false
      matrix:
        os: [ubuntu-18.04, ubuntu-20.04, macos-10.15, macos-11]
        pkg: [PKGLIST]

    runs-on: ${{ matrix.os }}

    env:
      HOMEBREW_NO_INSTALL_CLEANUP: set

    steps:
    - name: install ppkg
      run: |
        curl -LO https://raw.githubusercontent.com/leleliu008/ppkg/master/bin/ppkg
        chmod u+x ppkg
        mv ppkg $(brew --prefix)/bin

    - run: ppkg --version

    - uses: actions/checkout@v2

    - run: install -d ~/.ppkg/repos.d/offical
    - run: mv *       ~/.ppkg/repos.d/offical

    - run: ppkg install ${{ matrix.pkg }}
